rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user owns the customer
    function isCustomerOwner() {
      return isAuthenticated() && 
             resource.data.userId == request.auth.uid;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Customers collection
    match /customers/{customerId} {
      // Allow read if user owns the customer
      allow read: if isCustomerOwner();
      
      // Allow create if authenticated and setting userId to own uid
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Allow update if user owns the customer
      allow update: if isCustomerOwner();
      
      // Allow delete if user owns the customer
      allow delete: if isCustomerOwner();
      
      // Engagements subcollection
      match /engagements/{engagementId} {
        // Inherit customer permissions
        allow read, write: if isAuthenticated() && 
                             get(/databases/$(database)/documents/customers/$(customerId)).data.userId == request.auth.uid;
      }
      
      // Attachments subcollection
      match /attachments/{attachmentId} {
        // Inherit customer permissions
        allow read, write: if isAuthenticated() && 
                             get(/databases/$(database)/documents/customers/$(customerId)).data.userId == request.auth.uid;
      }
    }
  }
}
