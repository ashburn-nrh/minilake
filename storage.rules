rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Customers folder - only authenticated users can access
    match /customers/{customerId}/{allPaths=**} {
      // Allow read for authenticated users
      allow read: if isAuthenticated();
      
      // Allow write for authenticated users
      // More explicit authentication check
      allow write: if isAuthenticated() && request.auth.uid != null;
      
      // Allow create/update/delete operations explicitly
      allow create, update, delete: if isAuthenticated() && request.auth.uid != null;
    }
    
    // User avatars
    match /users/{userId}/{allPaths=**} {
      // Users can only access their own files
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
